{
  "name": "voice-transcribe-ai",
  "version": "1.0.0",
  "description": "Voice transcription app with OpenAI integration",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron-forge start",
    "start:dev": "electron-forge start --inspect-electron",
    "build": "tsc && webpack",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron-forge/plugin-webpack": "^7.6.0",
    "@electron/asar": "^3.2.18",
    "@electron/fuses": "^1.8.0",
    "@types/electron": "^1.4.38",
    "@types/electron-store": "^1.3.1",
    "@types/node": "^20.17.14",
    "css-loader": "^7.1.2",
    "electron": "^28.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "png-to-ico": "^2.1.8",
    "postcss-loader": "^8.1.1",
    "sharp": "^0.33.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "autoprefixer": "^10.4.20",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.0",
    "node-record-lpcm16": "^1.0.1",
    "openai": "^4.80.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "wav": "^1.0.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icon",
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "voice_transcribe_ai",
            "iconUrl": "file://assets/icon.ico",
            "setupIcon": "assets/icon.ico",
            "loadingGif": "assets/icon.png",
            "setupExe": "Voice Transcribe AI Setup.exe",
            "shortcutName": "Voice Transcribe AI",
            "createDesktopShortcut": true,
            "skipUpdateIcon": false
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
